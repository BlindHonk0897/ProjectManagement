<!DOCTYPE html>
<html>
   <head>
      <title>Manager | Clients</title>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
      <script src="/controller/assignAnddeleteClientController.js"></script>
     <link rel="stylesheet" href="/assets/styles/manager_unassignedClients.css">
   </head>
   <body>
      <!-- <link href="https://fonts.googleapis.com/css?family=Poppins:400,500,600,700" rel="stylesheet"> -->
      <div class="menu"> <span></span> </div>
      <nav id="nav">
         <ul class="main">
            <p style="font-size: 2em; color: #fff;">Manager</p>
            <!-- <li><a href="manager_takenProjects.html" style="color: #ec2652;">Taken Projects</a></li> -->
            <li class="has-subnav">
                  <a class="nav-text" href="manager_takenProjects">Taken Projects</a>
                  <ul>
                     <li><a href="manager_openProjects" class="sub">Open Projects</a></li>
                  </ul>
               </li>
            <!-- <li><a href="manager_openProjects.html">Open Projects</a></li> -->
            <!-- <li><a href="#">Clients</a></li> -->
            <li class="has-subnav">
               <a class="nav-text">Clients</a>
               <ul>
                  <li><a href="manager_assignedClients" class="sub">Assigned Clients</a></li>
                  <li><a href="manager_unassignedClients" class="sub">Unassigned Clients</a></li>
               </ul>
            </li>
            <li><a href="manager_approval">Approval</a></li>
            <li><a href="/">Logout</a></li>
         </ul>
      </nav>
      <div class="overlay"></div>
      <script>
         $('.menu, .overlay').click(function () {
           $('.menu').toggleClass('clicked');
           $('#nav').toggleClass('show');
         });
      </script>
      <div class="container" style="margin-top: 5%; width: 50%;">
         <a href="manager_addClients"><button class="btn btn-info btn-sm but-add" style="float: right;">Add Clients</button></a>
         <h3 style="margin-top: 5%; margin-bottom: 2%;" class="font-weight-normal">Unassigned Clients</h3>
         <div class="row">
            <table class="table table-borderless table-hover">
               <thead class="thead-dark">
                  <th style="width: 10%;">#</th>
                  <th style="width: 30%;">Client</th>
                  <th style="width: 20%;">Date Added</th>
                  <th style="width: 20%; padding-left: 10%;">Assign</th>
                  <th style="width: 10%; padding-left: 2%;">Delete</th>
               </thead>
               <tbody>
                  <% var counter= 1 %>
                  <% Users.forEach(function(item){%>
                     <tr>
                           <td><%= counter %></td>
                           <td><%= item.FullName %></td>
                           <td><%= item.DateAdded %></td> 
                           <td><button id="<%= item._id %>" class="btn btn-sm btn-info but-assign" style="width: 50%; margin-left: 37%;">Assign</button></td>
                           <td><button id="<%= item._id %>" class="btn btn-sm btn-danger but-delete" style="width: 110%; margin-left: -15%;">Delete</button></td>       
                     </tr>
                     <% counter++ %>
                  <%})%>
               </tbody>
            </table>
           <div class="container" id="Projects">
            <h3 style="margin-top: 5%; margin-bottom: 2%;" class="font-weight-normal">Choose Project</h3>
            <select class="form-control form-control-sm" id="Proj" style="width: 79.5%; display: inline-block;">
               <option value="EX" >View Projects</option>
                  <% Project.forEach(function(item){%>
                        <option value="<%= item._id %>" ><%= item.ProjectName %></option>
                  <%})%>
            </select>
               <button id="Continue" class="btn btn-sm btn-info" style="width: 20%; margin-left: -15%;float: right;">Continue</button>
           </div>
         </div>
      </div>
   </body>
</html>