<!DOCTYPE html>
<html>
   <head>
      <title>Secretary | Clients</title>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
      <link rel="stylesheet" href="/assets/styles/sec_clients.css">
   </head>
   <body>
      <!-- <link href="https://fonts.googleapis.com/css?family=Poppins:400,500,600,700" rel="stylesheet"> -->
      <div class="menu"> <span></span> </div>
      <nav id="nav">
         <ul class="main">
            <p style="font-size: 2em; color: #fff;">Secretary</p>
            <!-- <li><a href="manager_takenProjects.html" style="color: #ec2652;">Taken Projects</a></li> -->
            <li><a class="nav-text" href="sec_takenProjects">Taken Projects</a>
            <li><a href="sec_openProjects">Open Projects</a></li>
            <li><a href="sec_clients" style="color: #ec2652;">Clients</a></li>
            <li><a href="sec_chat">Chat</a></li>
            <li><a href="/">Logout</a></li>
         </ul>
      </nav>
      <div class="overlay"></div>
      <script>
         $('.menu, .overlay').click(function () {
           $('.menu').toggleClass('clicked');
           $('#nav').toggleClass('show');
         });
      </script>
      <div class="container" style="margin-top: 5%; width: 50%;">
         <h3 style="margin-top: 5%; margin-bottom: 2%;" class="font-weight-normal">Clients</h3>
         <div class="row">
            <table class="table table-borderless table-hover">
                  <thead class="thead-dark">
                        <th style="width: 5%;">#</th>
                        <th style="width: 20%;">Client</th>
                        <th style="width: 10%;">Status</th>
                        <th style="width: 10%; padding-left: 8%;">History</th> 
                  </thead>
               <tbody>
                  <% var counter = 1 %>
                  <% if(Clients){%>
                     <% Clients.forEach(function(client){%>
                        <tr>
                           <td><%= counter++ %></td>
                           <td><%= client.FullName %></td>
                           <td><%= client.Status %></td>
                           <% if(client.Status === "Assigned"){%>
                              <td><button id="<%= client._id %>" data-client="<%= client.FullName %>" class="btn btn-sm btn-warning view" style="width: 80%; margin-left: 10%;">View</button></td>
                           <%}else{%>
                              <td><button id="<%= client._id %>" data-status="<%= client.Status %>" class="btn btn-sm btn-info no" style="width: 80%; margin-left: 10%;">No History</button></td>
                           <%}%>
                        </tr>
                     <%})%>
                  <%}%>
               </tbody>
            </table>
         </div>
      </div>
   </body>
   <script>
      $(document).ready(function(){
         $('.view').click(function(){
            top.location.href = '/sec_history?ClientName='+$(this).attr('data-client');
         })
      })
   </script>
</html>