            </div>
            <div class="form-group">
               <input id="task6" type="text" class="form-control" placeholder="Add task here..." >
            </div>
            <!-- <div>
               <button class="btn btn-info" style="width: 50%;">Continue</button>
               <button class="btn btn-danger" style="width: 50%;">Cancel</button>
            </div> -->
            <div class="btn-group" role="group" style="width: 100%;">
               <button type="button" id="cancel" class="btn btn-danger" style="width: 50%;">Cancel</button>
               <button type="button" id="Add" class="btn btn-info" style="width: 50%;">Continue</button>
               <input  type="submit" id="Submit" class="form-control" style="display: none">
            </div>
         </form>
      </div>
